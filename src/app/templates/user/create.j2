{% extends "layout.j2" %}
{% block content %}

<div class="row">
	<div class="col s12 l6 offset-l3">
		<h4>Register</h4>
	</div>
</div>

<form method="POST" name="create" class="create-account">

{% csrf_token %}
<div class="row">
	<div class="input-field col s12 l6 offset-l3">
		{{ form.username.label_tag(label_suffix='')}}
		{{ form.username }}
	</div>
</div>

<div class="row">
	<div class="input-field col s12 l6 offset-l3">
		{{ form.password1.label_tag(label_suffix='') }}
		{{ form.password1 }}
	</div>
</div>

<div class="row">
	<div class="input-field col s12 l6 offset-l3">
		{{ form.password2.label_tag(label_suffix='') }}
		{{ form.password2 }}
	</div>
</div>

<div class="row">
	<div class="input-field col s12 l6 offset-l3">
		<button class="btn deep-orange lighten-2 waves-effect waves-light" type="submit">Register</button>
	</div>
</div>

</form>
{% endblock %}