{% extends "layout.j2" %}
{% block content %}

    <div class="row">
        <div class="col s12 l6 offset-l3">
            <h4>Login</h4>
        </div>
    </div>

    <form class="login-form" method="post">
        {% csrf_token %}

        <div class="row">
            <div class="input-field col s12 l6 offset-l3">
                {{ form.username.label_tag(label_suffix='') }}
                {{ form.username }}
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12 l6 offset-l3">
                {{ form.password.label_tag(label_suffix='') }}
                {{ form.password }}
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12 l6 offset-l3">
                <button class="login btn deep-orange lighten-2 waves-effect waves-light" type="submit">Login</button>
            </div>
        </div>

        <div class="row">
            <div class="col s12 l6 offset-l3">
                <div class="divider"></div>
            </div>
        </div>

        <div class="row">
            <div class="col s12 l6 offset-l3">
                <p>
                    Not a member yet, creating an account is easy...
                </p>
                <div class="input-field">
                    <a class="register btn deep-orange lighten-2 waves-effect waves-light" href="/account/create">Register Now</a>
                </div>
            </div>
        </div>
    </form>
{% endblock %}